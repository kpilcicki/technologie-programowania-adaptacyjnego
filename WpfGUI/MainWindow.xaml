<Window x:Class="WpfGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock Background="#FFF9C12B" Text="{Binding FilePath}" Grid.Row="0" Grid.Column="0"/>
        <Button Width="60" Height="30" Background="Azure" Content="Open" Command="{Binding GetFilePathCommand}" Grid.Row="0" Grid.Column="1"/>
        <Button Width="60" Height="30" Background="Azure" Content="Metadata" Command="{Binding GetMetadata}" Grid.Row="1" Grid.Column="1"/>
        <!-- <TreeView Grid.Row="1" Grid.ColumnSpan="2"> -->
        <!-- </TreeView> -->
    </Grid>
</Window>
